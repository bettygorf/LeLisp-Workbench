#  Le Makefile du syste`me Le_Lisp [386]
###################################################################
#  Ce makefile exploite  ../386dx/makefile pour
#  obtenir les fichiers d'assembleur: $(s)
###################################################################
# La machine a base de 386dx: par defaut: cygwin [cf ../386dx/makefile]
# C'est aussi: lelisp/$(SYSTEM)

SYSTEM	= cygwin
HOST	= $(SYSTEM)
AS	= sed -e "s/\.even/\.align 2/g"
ASFLAGS	= | as --gstabs

# Les entre'es standard
#
# Entree par defaut:

O31FPU	= 			\
	o31/bllsht.o		\
	o31/carcdr.o		\
	o31/chars.o		\
	o31/cntrl.o		\
	o31/eval.o		\
	o31/extend.o		\
	o31/fntstd.o		\
	o31/fspecs.o		\
	o31/gc.o		\
	o31/llinit.o		\
	o31/llcygwin.o		\
	o31/macroch.o		\
	o31/number.o		\
	o31/physio.o		\
	o31/print.o		\
	o31/read.o		\
	o31/specnb.o		\
	o31/string.o		\
	o31/symbs.o		\
	o31/toperr.o

O64FPU	= 			\
	o64/bllsht.o		\
	o64/carcdr.o		\
	o64/chars.o		\
	o64/cntrl.o		\
	o64/eval.o		\
	o64/extend.o		\
	o64/fntstd.o		\
	o64/fspecs.o		\
	o64/gc.o		\
	o64/llinit.o		\
	o64/llcygwin.o		\
	o64/macroch.o		\
	o64/number.o		\
	o64/physio.o		\
	o64/print.o		\
	o64/read.o		\
	o64/specnb.o		\
	o64/string.o		\
	o64/symbs.o		\
	o64/toperr.o

all: llm3expand

llm3expand:
	(cd ../386dx; sh ./faire.assembler ../$(SYSTEM)/lelisp31bin)
	cp ../386dx/unix/s31fpu/[a-z]*.s s31
	cp ../386dx/unix/s64fpu/[a-z]*.s s64
	$(MAKE) -f makellm3 llm31 llm64

world: llm3expand
	make -f Makeport FLT=31
	make -f Makeport FLT=64
	rm o/*.o
	make allbin

# Entree pour tout effacer: les binaires

clean:
	rm -f lelisp64llm3.o lelisp31llm3.o

lelisp31llm3.o:
	(cd ../386dx; make uxs31fpu)

lelisp64llm3.o:
	(cd ../386dx; make uxs64fpu)

####################################################
#	s31
####################################################

llm31: $(O31FPU)

o31/bllsht.o: s31/bllsht.s
	@echo $<
	@$(AS) s31/bllsht.s $(ASFLAGS) -o $@

o31/carcdr.o: s31/carcdr.s
	@echo $<
	@$(AS) s31/carcdr.s $(ASFLAGS) -o $@

